<?xml version="1.0" encoding="UTF-8"?>
<project name="basicodata" default="all">
  
  
  <property file="basicodata.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.ear"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value=""/>
  <property name="project.jdk.bin" value=""/>
  <property name="project.jdk.classpath" value=""/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.windward_jars.classpath">
    <fileset dir="${basedir}/../../../../../jars">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module BasicOData -->
  
  <dirname property="module.basicodata.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.basicodata" value="${jdk.home.1.7}"/>
  <property name="module.jdk.bin.basicodata" value="${jdk.bin.1.7}"/>
  <property name="module.jdk.classpath.basicodata" value="jdk.classpath.1.7"/>
  
  <property name="compiler.args.basicodata" value="-encoding UTF-8 -source 1.3 -target 1.3 ${compiler.args}"/>
  
  <property name="basicodata.output.dir" value="${module.basicodata.basedir}/../../../../../../../../../../../../../production/BasicOData"/>
  <property name="basicodata.testoutput.dir" value="${module.basicodata.basedir}/../../../../../../../../../../../../../test/BasicOData"/>
  
  <path id="basicodata.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="basicodata.module.production.classpath">
    <path refid="${module.jdk.classpath.basicodata}"/>
    <path refid="library.windward_jars.classpath"/>
  </path>
  
  <path id="basicodata.runtime.production.module.classpath">
    <pathelement location="${basicodata.output.dir}"/>
    <path refid="library.windward_jars.classpath"/>
  </path>
  
  <path id="basicodata.module.classpath">
    <path refid="${module.jdk.classpath.basicodata}"/>
    <pathelement location="${basicodata.output.dir}"/>
    <path refid="library.windward_jars.classpath"/>
  </path>
  
  <path id="basicodata.runtime.module.classpath">
    <pathelement location="${basicodata.testoutput.dir}"/>
    <pathelement location="${basicodata.output.dir}"/>
    <path refid="library.windward_jars.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.basicodata">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.basicodata">
    <patternset refid="excluded.from.module.basicodata"/>
  </patternset>
  
  <path id="basicodata.module.sourcepath">
    <dirset dir="${module.basicodata.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.basicodata" depends="compile.module.basicodata.production,compile.module.basicodata.tests" description="Compile module BasicOData"/>
  
  <target name="compile.module.basicodata.production" depends="register.custom.compilers" description="Compile module BasicOData; production classes">
    <mkdir dir="${basicodata.output.dir}"/>
    <javac2 destdir="${basicodata.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.basicodata}/javac">
      <compilerarg line="${compiler.args.basicodata}"/>
      <bootclasspath refid="basicodata.module.bootclasspath"/>
      <classpath refid="basicodata.module.production.classpath"/>
      <src refid="basicodata.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.basicodata"/>
    </javac2>
    
    <copy todir="${basicodata.output.dir}">
      <fileset dir="${module.basicodata.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.basicodata.tests" depends="register.custom.compilers,compile.module.basicodata.production" description="compile module BasicOData; test classes" unless="skip.tests"/>
  
  <target name="clean.module.basicodata" description="cleanup module">
    <delete dir="${basicodata.output.dir}"/>
    <delete dir="${basicodata.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.basicodata" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.basicodata" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>